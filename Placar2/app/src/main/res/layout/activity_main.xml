<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.renato.placar.MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="110dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_titulo_1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Dupla 1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:maxLines="1"
                android:maxLength="13"/>
            <EditText
                android:id="@+id/edt_d1"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:hint="jogador 1"
                android:background="#ffffff"
                android:textAlignment="center"
                android:maxLines="1"
                android:maxLength="13"/>
            <EditText
                android:id="@+id/edt_d1_1"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:hint="jogador 2"
                android:background="#ffffff"
                android:textAlignment="center"
                android:maxLines="1"
                android:maxLength="13"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/txt_x"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:textStyle="bold"
                android:textSize="65dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="110dp"
            android:layout_marginStart="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_titulo_2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Dupla 2"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="15dp"/>
            <EditText
                android:id="@+id/edt_d2"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:hint="jogador 1"
                android:textAlignment="center"
                android:background="#ffffff"
                android:maxLines="1"
                android:maxLength="13"/>
            <EditText
                android:id="@+id/edt_d2_2"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:hint="jogador 2"
                android:textAlignment="center"
                android:background="#ffffff"
                android:maxLines="1"
                android:maxLength="13"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#000">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 - Rodada"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/txt_r2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 - Rodada"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/txt_r3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 - Rodada"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/txt_r4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 - Rodada"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="200dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_r1"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:hint="0000"
                android:inputType="number|numberSigned"
                android:maxLength="4"
                android:background="#ffffff"
                android:maxLines="1"
                />

            <EditText
                android:id="@+id/edt_r2"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:background="#ffffff"
                android:hint="0000"
                android:maxLength="4"
                android:inputType="number|numberSigned"
                android:maxLines="1"/>

            <EditText
                android:id="@+id/edt_r3"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:hint="0000"
                android:inputType="number|numberSigned"
                android:background="#ffffff"
                android:maxLength="4"
                android:maxLines="1"/>

            <EditText
                android:id="@+id/edt_r4"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:hint="0000"
                android:inputType="number|numberSigned"
                android:background="#ffffff"
                android:maxLength="4"
                android:maxLines="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="5dp"
            android:layout_height="210dp"
            android:background="#000">


        </LinearLayout>
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="200dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_r1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 - Rodada"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:id="@+id/txt_r2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 - Rodada"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    />
                <TextView
                    android:id="@+id/txt_r3_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 - Rodada"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:id="@+id/txt_r4_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 - Rodada"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="200dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edt_r1_2"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:hint="0000"
                    android:inputType="number|numberSigned"
                    android:background="#ffffff"
                    android:maxLength="4"
                    android:maxLines="1" />
                <EditText
                    android:id="@+id/edt_r2_2"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:hint="0000"
                    android:inputType="number|numberSigned"
                    android:background="#ffffff"
                    android:maxLength="4"
                    android:maxLines="1"/>
                <EditText
                    android:id="@+id/edt_r3_2"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:hint="0000"
                    android:inputType="number|numberSigned"
                    android:background="#ffffff"
                    android:maxLength="4"
                    android:maxLines="1"/>
                <EditText
                    android:id="@+id/edt_r4_2"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:hint="0000"
                    android:inputType="number|numberSigned"
                    android:background="#ffffff"
                    android:maxLength="4"
                    android:maxLines="1"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="5dp"
    android:background="#000000">

</LinearLayout>
    <TextView
        android:id="@+id/txt_resultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resultados"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textAlignment="center"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/txt_parcial_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parcial"
            android:textStyle="bold"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/txt_r_parcial_1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:inputType="number"
            android:textSize="15sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_x_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textStyle="bold"
            android:textSize="50dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp">

        <TextView
            android:id="@+id/txt_parcial_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parcial"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_r_parcial_2"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:inputType="number"
            android:textSize="15sp"/>

    </LinearLayout>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_campeao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ganhador"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15dp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_r_campeao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:visibility="invisible"
            android:text="Dupla 1"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/txt_r_campeao_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="invisible"
            android:textAlignment="center"
            android:text="Dupla 2"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/txt_empate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Empate"
            android:textAlignment="center"
            android:textSize="20sp"
            android:visibility="invisible"/>

    </FrameLayout>

</LinearLayout>
    <Button
        android:id="@+id/btn_salvar"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="130dp"
        android:text="guardar"/>
</LinearLayout>
